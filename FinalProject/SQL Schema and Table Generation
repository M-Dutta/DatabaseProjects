create schema Website;

create Table Website.Flights (
Company_name varchar(25) not null,
Flight_no varchar(25) not null,
Price double not null,
Departure_time time,
Arrival_time time,
primary key(Company_name, Flight_no, Departure_time)
);

create Table Website.Bookings (
Fname varchar(25) not null, 
Lname varchar(25) not null,
PassengerBirthDate date not null, 
Email varchar (50),
Phone varchar(12),
Confirmation varchar(20) primary key 
);

create Table Website.Linker (
Confirmation varchar(20) unique not null,
Company_name Varchar(25),
Flight_no Varchar(25),
Departure_time time,
foreign key (Company_name) references flights(Company_name),
foreign key (Confirmation) references bookings(Confirmation)
);

